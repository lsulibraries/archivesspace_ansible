# local values for overrides
archivesspace_s3_bucket: mybuckett
archivesspace_mysql_user: as
archivesspace_mysql_pass: pass
archivesspace_mysql_db: archivesspace
archivesspace_hostname: localhost
archivesspace_jasper_db_user: jasper
archivesspace_jasper_db_pass: jasperpass

# roles/ansible-role-mysql
mysql_root_password: root

mysql_databases:
  - name: "{{ archivesspace_mysql_db }}"
    encoding: utf8
    collation: utf8_general_ci
mysql_users:
  - name: "{{ archivesspace_mysql_user }}"
    password: "{{ archivesspace_mysql_pass }}"
    priv: "{{ archivesspace_mysql_db }}.*:ALL"
  - name: "{{ archivesspace_jasper_db_user }}"
    host: "%"
    password: "{{ archivesspace_jasper_db_pass }}"
    priv: "{{ archivesspace_mysql_db }}.*:SELECT"

# roles/ansible-role-apache
apache_create_vhosts: true
apache_listen_port: 80

apache_mods_enabled:
  - proxy.load
  - proxy_http.load

apache_vhosts:
  - servername: "{{ archivesspace_hostname }}"
    documentroot: "/var/www/html"
    extra_parameters: |
      ProxyPreserveHost On
      ProxyPass / http://localhost:8080/
      ProxyPassReverse / http://localhost:8080/

apache_vhosts_filename: "vhosts.conf"
apache_remove_default_vhost: true
