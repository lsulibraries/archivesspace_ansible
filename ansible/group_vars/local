---
# default cron configuration
automysqlbackup_cron:
  minute: "0"
  hour: "0"
  day: "*"
  month: "*"
  weekday: "*"

mysql_user: as
mysql_pass: pass
mysql_db: archivesspace
mysql_host: localhost
mysql_root_password: root

mysql_databases:
  - name: "{{ mysql_db }}"
    encoding: utf8
    collation: utf8_general_ci
mysql_users:
  - name: "{{ mysql_user }}"
    host: "{{ mysql_host }}"
    password: "{{ mysql_pass }}"
    priv: "{{ mysql_db }}.*:ALL"

archivesspace_hostname: localhost

apache_listen_port: 80
apache_create_vhosts: true
apache_vhosts_filename: "vhosts.conf"
apache_remove_default_vhost: true
apache_mods_enabled:
  - proxy.load
  - proxy_http.load

apache_vhosts:
  - servername: "{{ archivesspace_hostname }}"
    documentroot: "/var/www/html"
    extra_parameters: |
      ProxyPreserveHost On
      ProxyPass / http://localhost:8080/
      ProxyPassReverse / http://localhost:8080/

automysqlbackup_dbexclude: "information_schema"
automysqlbackup_dump_full_schema: yes
automysqlbackup_mailcontent: stdout