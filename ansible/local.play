---
- hosts: all
  become: true
  roles:
    - common
    - ansible-role-apache
    - ansible-role-git
    - ansible-role-mysql
    - ansible-role-java
    - archivesspace
    - ansible-automysqlbackup-role

  vars:
    fetch_data: True
    upgrade: False

  tasks:
    - name: restart apache
      service: 
        name: apache2
        state: restarted

  vars_files: 
    - group_vars/local
    - ['aws_secrets', 'aws_secrets.example']
